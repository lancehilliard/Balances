@page "/"
@namespace Balances.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Balances</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var date = new Date('@DateTime.UtcNow.ToString("R")');
            var when = date.toLocaleString([], { 'weekday': 'short', 'month': 'numeric', 'day': 'numeric', 'hour': 'numeric', 'minute': 'numeric', 'timeZoneName': 'short' });
            var whenDiv = document.createElement("div");
            whenDiv.className = "rounded when";
            whenDiv.innerHTML = when;
            document.body.prepend(whenDiv);
        });
    </script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered"/>
    </app>
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
